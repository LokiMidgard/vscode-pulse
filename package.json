{
	"name": "vscode-pulse",
	"displayName": "Pulse: Clock & battery",
	"description": "Display a clock and current battery state in the status bar. A fork of the Pulse extension.",
	"version": "1.0.8",
	"author": "Patrick Kranz",
	"contributors": [
		{
			"name": "Kyle Huggins",
			"url": "http://huggins.io/"
		},
		{
			"name": "DOOMKEKER",
			"url": "https://github.com/DOOMKEKER"
		}
	],
	"license": "MIT",
	"homepage": "https://github.com/LokiMidgard/vscode-pulse#readme",
	"publisher": "midgard",
	"icon": "media/icon.png",
	"galleryBanner": {
		"color": "#25292E",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/LokiMidgard/vscode-pulse"
	},
	"bugs": {
		"url": "https://github.com/LokiMidgard/vscode-pulse/issues"
	},
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"extensionKind": [
		"ui"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "Pulse",
			"properties": {
				"pulse.swap": {
					"type": "boolean",
					"default": false,
					"description": "Swap the display order of the battery and clock. Ignored if device has no battery."
				},
				"pulse.clock.format": {
					"type": "string",
					"default": "HH:mm",
					"description": "Set the display format for the clock."
				},

				"pulse.battery.interval": {
					"type": "number",
					"default": 3000,
					"minimum": 1000,
					"description": "Set the polling interval for the battery in ms. Ignored if device has no battery."
				},
				"pulse.battery.warning": {
					"type": "number",
					"default": 0,
					"minimum": 0,
					"maximum": 100,
					"description": "This will warn when battery falls reaches (≤) the provided value"
				},
				"pulse.battery.error": {
					"type": "number",
					"default": 0,
					"minimum": 0,
					"maximum": 100,
					"description": "This will warn (with error color) when battery reaches (≤) the provided value"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test",
		"publish": "vsce publish"
	},
	"dependencies": {
		"moment": "^2.29.1",
		"systeminformation": "^5.27.10"
	},
	"devDependencies": {
		"vsce": "^2.15.0",
		"@types/vscode": "^1.104.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@typescript-eslint/eslint-plugin": "^8.42.0",
		"@typescript-eslint/parser": "^8.42.0",
		"eslint": "^9.34.0",
		"esbuild": "^0.25.9",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.9.2",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2"
	}
}